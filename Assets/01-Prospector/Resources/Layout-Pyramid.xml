<xml>
    <!-- This file holds info for laying out the Pyramid Solitaire card game. -->
    
    <!-- The multiplier is multiplied by the x and y attributes below. -->
    <!-- This determines how loose or tight the layout is. --> 
    <multiplier x="1.25" y="1.5" />
    
    <!-- In the XML below, id is the number of the card -->
    <!-- x and y set position -->
    <!-- faceup is 1 if the card is face-up -->
    <!-- layer sets the depth layer so cards overlap properly -->
    <!-- hiddenby is the ids of cards that keep a card face-down -->
    
    <!-- Layer0, the deepest cards. -->
    <slot id="0" x="-6.75" y="-4" faceup="1" layer="0" hiddenby="3,4" />
	<slot id="1" x="-4.50" y="-4" faceup="1" layer="0" hiddenby="5,6" />
    <slot id="2" x="-2.25" y="-4" faceup="1" layer="0" hiddenby="7,8" />
    <slot id="3" x="0" y="-4" faceup="1" layer="0" hiddenby="9,10" />
	<slot id="4" x="2.25" y="-4" faceup="1" layer="0" hiddenby="10,11" />
	<slot id="5" x="4.50" y="-4" faceup="1" layer="0" hiddenby="12,13" />
	<slot id="6" x="6.75" y="-4" faceup="1" layer="0" hiddenby="13,14" />
    
    <!-- Layer1, the next level. -->
    <slot id="7" x="-5.625" y="-3" faceup="1" layer="1" hiddenby="15,16" />
    <slot id="8" x="-3.375" y="-3" faceup="1" layer="1" hiddenby="16,17" />
	<slot id="9" x="-1.125" y="-3" faceup="1" layer="1" hiddenby="18,19" />
    <slot id="10" x="1.125" y="-3" faceup="1" layer="1" hiddenby="19,20" />
	<slot id="11" x="3.375" y="-3" faceup="1" layer="1" hiddenby="20,21" />
    <slot id="12" x="5.625" y="-3" faceup="1" layer="1" hiddenby="21,22" />
    
    <!-- Layer2, the next level. -->
    <slot id="13" x="-4.50" y="-2" faceup="1" layer="2" hiddenby="22,23" />
    <slot id="14" x="-2.25" y="-2" faceup="1" layer="2" hiddenby="23,24" />
    <slot id="15" x="0" y="-2" faceup="1" layer="2" hiddenby="24,25" />
	<slot id="16" x="2.25" y="-2" faceup="1" layer="2" hiddenby="25,26" />
    <slot id="17" x="4.50" y="-2" faceup="1" layer="2" hiddenby="26,27" />
    
    <!-- Layer3, the next level. -->
    <slot id="18" x="-3.375" y="-1" faceup="1" layer="3" />
    <slot id="19" x="-1.125" y="-1" faceup="1" layer="3" />
    <slot id="20" x="1.125" y="-1" faceup="1" layer="3"/>
    <slot id="21" x="3.375" y="-1" faceup="1" layer="3" />
    
    <!-- Layer4, the next level. -->
    <slot id="22" x="-2.25" y="0" faceup="1" layer="4"/>
    <slot id="23" x="0" y="0" faceup="1" layer="4"/>
    <slot id="24" x="2.25" y="0" faceup="1" layer="4" />
    
    <!-- Layer5, the next level. -->
    <slot id="25" x="-1.125" y="1" faceup="1" layer="5" />
    <slot id="26" x="1.125" y="1" faceup="1" layer="5" />

	 <!-- Layer6, the next level. -->
    <slot id="27" x="0" y="2" faceup="1" layer="6" />

    <!-- This positions the draw pile and staggers it -->
    <slot type="drawpile" x="9" y="4.5" xstagger="0.0" layer="6"/>
    
    <!-- This positions the discard pile and target card -->
    <slot type="discardpile" x="6" y="4.5" layer="7"/>
</xml>
